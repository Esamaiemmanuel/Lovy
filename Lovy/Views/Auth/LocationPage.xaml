<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lovy.Views.Auth.LocationPage"
             Shell.BackgroundColor="#fe4f49"
             Shell.NavBarIsVisible="false"
             Title="LocationPage">
    <VerticalStackLayout>
        <Label 
            Text="So, are you from around here?"
            FontAttributes="Bold"  
            FontFamily="Comfortaa"
            FontSize="24"
            Margin="20,60,0,0"
            HorizontalOptions="Start" />
        <Label 
            Text="Set your location to see who's in your area or beyond. You won't be able to match with people otherwise."
            FontSize="14"
            Margin="20,20,0,0"
            HorizontalOptions="Center"/>
        <Image Source="location.png" Margin="30,80,30,40" HorizontalOptions="Start"  />

        <StackLayout VerticalOptions="End">
            <Button 
            Text="Allow"    
            FontFamily="Comfortaa" 
            FontAttributes="Bold"
            FontSize="18"
            BackgroundColor="Red" 
            TextColor="White" 
            HorizontalOptions="FillAndExpand" 
            VerticalOptions="End"  
            Margin="20,90,20,0"
            x:Name="NextStep" 
            Clicked="OnGetLocationClicked" 
            CornerRadius="40"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>