<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lovy.Views.Auth.QualitiesPage"
             Title="Qualities">
    <VerticalStackLayout>
        <Label 
            Text="What are you into?"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="You like what you like. Now, let everyone know."
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        

        <Button x:Name="NextBtn" Text="Next Step" BackgroundColor="Red" TextColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="End"  Margin="20" Clicked="NextBtn_Clicked"/>

    </VerticalStackLayout>
</ContentPage>